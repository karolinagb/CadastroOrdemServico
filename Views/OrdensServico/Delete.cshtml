@model OrdemServico

@{
    ViewData["Title"] = "Exclusão de Ordem de Serviço";
}

<h2>@ViewData["Title"]</h2>

<hr />

<p>
    <h3 class="text-danger">Tem certeza que deseja excluir essa  Ordem de Serviço?</h3>
</p>

<div>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.Numero)</dt>
        <dd>@Html.DisplayFor(m => m.Numero)</dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.Titulo)</dt>
        <dd>@Html.DisplayFor(m => m.Titulo)</dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.CNPJCliente)</dt>
        <dd>@Model.CNPJCliente</dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.NomeCliente)</dt>
        <dd>@Model.NomeCliente</dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.CPFPrestadorServico)</dt>
        <dd>@Html.DisplayFor(m => m.CPFPrestadorServico)</dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.NomePrestadorServico)</dt>
        <dd>@Html.DisplayFor(m => m.NomePrestadorServico)</dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.Data)</dt>
        <dd>@Model.Data.ToString("dd/MM/yyyy")</dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.Valor)</dt>
        <dd>@Model.Valor.ToString("c")</dd>
    </dl>
</div>

<div>
    <form asp-action="Inactivate">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index">Voltar a página inicial</a>
    </form>
</div>